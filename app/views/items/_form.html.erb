<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
        <% item.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :DOC %>
    <%= form.date_select :DOC %>
  </div>

  <div class="field">
    <%= form.label :version %>
    <%= form.text_field :version %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price %>
  </div>

  <div class="field">
    <%= form.label :available %>
    <%= form.number_field :available %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>

  <%= form.hidden_field :user_id, value: current_user.id%>
  Application: <br>
  <%= form.fields_for :application do |app_form| %>
    <%= app_form.label :creator %>
    <%= app_form.text_field :creator %>
    <%= app_form.label :techstack %>
    <%= app_form.text_field :techstack %>
    <%= app_form.label :description %>
    <%= app_form.text_field :description %>
    <%= app_form.label :specifications %>
    <%= app_form.text_field :specifications %>
<% end %>
